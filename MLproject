name: Deploying an ML Project with MLflow

conda_env: data/conda.yaml

entry_points:
  load_data:
    parameters:
      filename: filename
      kind: kind
      username: username
    command: >
      python includes/main/python/load_data.py
      --filename {filename}
      --kind {kind}
      --username {username}
  etl:
    parameters:
      username: username
    command: >
      python includes/main/python/etl.py
      --username {username}
  experiment:
    parameters:
      penalty: penalty
      max_iter: {type: int, default: 10000}
      username: username
    command: >
      python includes/main/python/experiment.py
      --penalty {penalty}
      --max-iter {max_iter}
      --username {username}
