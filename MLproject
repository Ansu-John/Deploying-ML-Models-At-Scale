name: Deploying an ML Project with MLflow

conda_env: data/conda.yaml

entry_points:
  load_data:
    parameters:
      file_name: file_name
      kind: kind
      username: username
    command: >
      python includes/main/python/load_data.py
      --file-name {file_name}
      --kind {kind}
      --username {username}
  etl:
    parameters:
      username: username
      local: {type: bool, default: True}
    command: >
      python includes/main/python/etl.py
      --username {username}
      --local {local}
  experiment:
    parameters:
      penalty: penalty
      max_iter: {type: int, default: 10000}
      username: username
      local: local
    command: >
      python includes/main/python/experiment.py
      --penalty {penalty}
      --max-iter {max_iter}
      --username {username}
      --local {local}
  main:
    parameters:
      username: username
      penalty: penalty
      local: {type: bool, default: True}
      use_conda: use_conda
    command: >
      python main.py
      --penalty {penalty}
      --username {username}
      --local {local}
      --use-conda {use_conda}
